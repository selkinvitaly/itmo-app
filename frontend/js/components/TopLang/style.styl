.lang
  position: relative
  display: inline-block
  height: 30px

.langLabel
  font-size: 0
  height: 100%
  line-height: 30px
  cursor: pointer

  &__txt
    font-size: (14/16)rem
    padding-left: 10px
    text-decoration: underline

  &__icn
    width: 10px
    display: inline-block
    height: 10px
    margin-left: 7px

.lang__list
  list-style: none
  box-shadow: 0 1px 1px 1px rgba(#000, .15)
  border-radius: 0 0 3px 3px
  background-color: #fff
  position: absolute
  width: 100%
  text-align: left
  top: 100%
  right: 0
  display: none

  .lang_opened &
    display: block

.lang__item
  font-size: (14/16)rem
  cursor: pointer
  height: 30px
  line-height: @height
  padding: 0 10px

  &:last-child
    border-radius: inherit

  &:hover
    background-color: #f6ce81
