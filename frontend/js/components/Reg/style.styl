.reg
  width: 100%
  box-shadow: 1px 1px 1px 1px rgba(#000, .2)
  border-radius: 3px
  padding: 10px 20px 18px

  &__title
    color: #333
    font-size: (18/16)rem

  &__name
  &__email
  &__pw
    background-color: #fff
    display: block
    width: 100%
    margin-top: 10px
    height: 30px
    border-radius: 3px
    padding: 0 10px
    border: 1px solid #ccc

  &__btn
    width: 100%
    display: block
    border: 1px solid #f1a02a
    background-color: #fab81e
    background-image: linear-gradient(to bottom, #ffcc4d 0%, #fab81e 100%)
    margin-top: 10px
    height: 27px
    color: #292f33
    font-weight: bold
    border-radius: 3px
    text-shadow: 0 1px 0 rgba(#fff, .5)

    &:hover
      background: #fb9d23
